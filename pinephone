#!/bin/bash

# Root check

if [ "$EUID" -ne 0 ]
	then echo "Please run this command as root"
	exit
fi

# Aliases

# Dnf
echo "alias i='sudo dnf install -y'" >> /home/pine/.bashrc
echo "alias r='sudo dnf remove -y'" >> /home/pine/.bashrc
echo "alias l='clear;dnf list --installed'" >> /home/pine/.bashrc
echo "alias u='dnf check-update -y'" >> /home/pine/.bashrc
echo "alias d='sudo dnf upgrade -y'" >> /home/pine/.bashrc
echo "alias a='sudo dnf autoremove -y'" >> /home/pine/.bashrc
echo "alias c='dnf clean all -y'" >> /home/pine/.bashrc

# Flatpak
echo "alias fu='flatpak update -y'" >> /home/pine/.bashrc
echo "alias fi='flatpak --user install -y'"  >> /home/pine/.bashrc
echo "alias fr='flatpak remove -y --delete-data'"  >> /home/pine/.bashrc
echo "alias fa='flatpak remove -y --unused --delete-data'"  >> /home/pine/.bashrc
echo "alias fl='flatpak list'"  >> /home/pine/.bashrc

# Git
echo "alias gs='git status'" >> /home/pine/.bashrc
echo "alias ga='git add'" >> /home/pine/.bashrc
echo "alias gc='git commit'" >> /home/pine/.bashrc
echo "alias gp='git push'" >> /home/pine/.bashrc
echo "alias g='ga .;gc;gp'" >> /home/pine/.bashrc

# Update everything
echo "alias up='u;d;a;c;fu;fa'" >> /home/pine/.bashrc

# Git config
git config --global user.name "Maarten de Jong"
git config --global user.email "accounts@arteeh.com"

# Remove packages

dnf remove -y				\
	arm-image-installer		\
	calls				\
	chatty				\
	epiphany			\
	evolution			\
	evolution-langpacks		\
	evolution-data-server		\
	evolution-data-server-langpacks	\
	firefox				\
	gnome-contacts			\
	gnome-power-manager		\
	gnome-system-monitor		\
	gnome-usage			\
	initial-setup			\
	megapixels			\
	nautilus			\
	vim-minimal

dnf autoremove -y

dnf install -y				\
	flatpak				\
	mutter				\
	phosh				\
	gdm				\
	gnome-shell			\
	gnome-control-center

echo "Done! You should probably reboot so everything is in the right place."
