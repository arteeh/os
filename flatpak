#!/bin/bash

# Add the flathub.org and fedora repositories

flatpak remote-add --user --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
flatpak remote-add --user --if-not-exists fedora oci+https://registry.fedoraproject.org

# Install my apps

flatpak install --user flathub -y \
	org.gnome.baobab \
	org.gnome.Boxes \
	org.gnome.Calculator \
	org.gnome.Calendar \
	org.gnome.Clocks \
	org.gnome.eog \
	org.gnome.Epiphany \
	org.gnome.Fractal \
	org.gnome.Geary \
	org.gnome.gedit \
	org.gnome.Maps \
	org.gnome.Totem \
	org.gnome.Weather \
	org.glimpse_editor.Glimpse \
	org.libreoffice.LibreOffice \
	org.signal.Signal \
	com.discordapp.Discord \
	com.github.Eloston.UngoogledChromium \
	com.github.tchx84.Flatseal \
	com.microsoft.Teams \
	com.spotify.Client \
	com.transmissionbt.Transmission

flatpak install --user fedora -y \
	org.gnome.Screenshot

echo "Done! You should probably reboot so everything is in the right place."
